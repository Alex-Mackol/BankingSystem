@model BankingModels.Model.CardInfo
@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/css/autorizateCard.css" />
      <script src="~/js/site.js"></script>
</head>

<div class="text-center">
    <div class="row">
        @*<div class="col-md-4">*@
            <form asp-action="CheckCardNumber" asp-controller="Home" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <div class="form-group">
                         <label asp-for="CardNumber" class="control-label"></label>
                         <input id="cardNumber" asp-for="CardNumber" class="form-control" />
                         <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                         <input type="button" value="Очистить" class="btn btn-primary" />
                        <input type="submit" value="Ок" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        @*</div>*@
    </div>
    
                   <div>
                      <table class="tableKeyboard">
                      @for(int i = 9; i>=1; i-=3)
                        {
                            <tr>
                                @for(int j = (i - 2); j <= i; j++)
                                {
                                    <td><button class="btnKeyboard" >@j</button></td>
                                }
                            </tr>
                        }
                        <tr><td colspan="3"><button class="btnKeyboard tdKey0" >0</button></td></tr>
                      </table>
                     </div>
</div>
