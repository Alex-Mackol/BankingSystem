@model BankingModels.Model.OperationDetail
@{
    ViewData["Title"] = "Снятие счета";
}

<div class="text-center">
    <div class="row centerDiv">
        @*<div class="col-md-4">*@
            <form asp-action="WithdrawMoney" asp-controller="Operation" asp-anti-forgery="true" method="post">
                <div class="validation" asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <div class="form-group">
                         <label asp-for="WithDrawalSum" class="control-label">Снятие денег</label>
                         <input id="fieldWithDrawalSum" asp-for="WithDrawalSum" class="form-control" />
                         <span asp-validation-for="WithDrawalSum" class="text-danger"></span>
                    </div>
                    
                   <div>
                      <table class="tableKeyboard">
                      @for(int i = 9; i>=1; i-=3)
                        {
                            <tr>
                                @for(int j = (i - 2); j <= i; j++)
                                {
                                    <td><button type="button" class="btnKeyboard">@j</button></td>
                                }
                            </tr>
                        }
                        <tr>
                            <td colspan="2"><button type="button" class="btnKeyboard" >0</button></td>
                            <td><button type="button" class="btnKeyboard">,</button></td>
                        </tr>
                      </table>
                     </div>


                    <div class="form-group">
                         <input type="button" value="Очистить" class="btn btn-primary btnClear" />
                        <input type="submit"  value="Ок" class="btn btn-primary" />
                        <a asp-action="Exit" class="btn btn-primary">Выход</a>
                    </div>
                </div>
            </form>
        @*</div>*@
    </div>
    
    
</div>