@model BankingModels.Model.OperationDetail

@{
    ViewData["Title"] = "Информация счета";
}

<h1>Счет</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          <span>Номер карты:</span> 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Card.CardNumber)
        </dd>
        <dt class = "col-sm-2">
            <span>Время операции:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            <span>Сумма снятия:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WithDrawalSum)
        </dd>
         <dt class = "col-sm-2">
             <span>Сумма на счету:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Card.Sum)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Назад в меню</a>
    <a asp-action="Exit" class="btn btn-primary">Выход</a>
</div>
