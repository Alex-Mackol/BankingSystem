@model BankingModels.Model.CardInfo

@{
    ViewData["Title"] = "Баланс карты";
}

<h1>Баланс</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
             <span>Номер карты:</span> 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CardNumber)
        </dd>
        <dt class = "col-sm-2">
             <span>Сумма на счету:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sum)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Вернуться в меню</a>
</div>
